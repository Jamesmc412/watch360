{
  "name": "My YT Bookmarks",
  "version": "0.1.0",
  "manifest_version": 3,
  "description": "Saving timestamps and video info from YouTube videos",
  "permissions": [
    "storage",
    "tabs",
    "activeTab",
    "scripting",
    "http://localhost/*"  
  ],
  "host_permissions": [
    "https://*.youtube.com/*" 
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "assets/ext-icon.png",
      "24": "assets/ext-icon.png",
      "32": "assets/ext-icon.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["https://*.youtube.com/*"],  
      "js": ["contentScript.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "assets/bookmark.png",
        "assets/play.png",
        "assets/delete.png",
        "assets/save.png"
      ],
      "matches": ["https://*.youtube.com/*"]
    }
  ],
  "icons": {
    "16": "assets/ext-icon.png",
    "48": "assets/ext-icon.png",
    "128": "assets/ext-icon.png"
  }
}
